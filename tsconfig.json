{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/Containers/*", "src/Presenters/*", "src/JsPackages/*"]
        },
        "target": "es5",
        "module": "commonjs", // target === "ES3" or "ES5" ? "CommonJS" : "ES6"
        "moduleResolution": "node", // module === "AMD" or "System" or "ES6" ? "Classic" : "Node"
        "lib": ["es2015", "dom"], // --target ES5: DOM,ES5,ScriptHost
        "sourceMap": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "jsx": "react"
    },
    "exclude": ["node_modules", "build"],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    }
}
